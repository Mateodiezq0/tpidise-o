@page "/Empleados/Ventas/ClienteFormulario"
@inject NotificationService NotificationService 
@inherits OwningComponentBase<Usuario> 
@using System
@using Reciplas.Models 


<TituloPrincipal TextoPrincipal="Ventas" TextoSecundario="Clientes" />

<style>
    form .row {
        margin-bottom: 16px;
    }
</style>

@if (order == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <RadzenTemplateForm Data="@order" Submit="@((Order args) => { Submit(args); })">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <RadzenFieldset Text="Modificación">
                    <div>
                        <div class="col-md align-items-center d-flex">
                            <RadzenLabel Text="Nombre y Apellido" />
                        </div>
                        <div class="col-md-10">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 align-items-center d-flex">
                            <RadzenLabel Text="Dirección" />
                        </div>
                        <div class="col-md-10">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md align-items-center d-flex">
                            <RadzenLabel Text="Fecha de Nacimiento" />
                        </div>
                        <div class="col-md-10">
                            <RadzenDatePicker style="width: 100%;" Name="ExpiryDate" @bind-Value=@value ShowDate="true" DateOnly="true" DateFormat="MM/dd/yyyy"  />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md align-items-center d-flex">
                            <RadzenLabel Text="Teléfono" />
                        </div>
                        <div class="col-md-10">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md align-items-center d-flex">
                            <RadzenLabel Text="Correo Electronico" />
                        </div>
                        <div class="col-md-10">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div>
                </RadzenFieldset>


        <br>
        </div>
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
                <RadzenButton Style="margin-left:40px" Click=@(() => EmployeeIDVisible = !EmployeeIDVisible) Text="Modificar" Icon="check_circle" ButtonStyle="ButtonStyle.Success"  />
                <RadzenButton Click=@(() => EmployeeIDVisible = !EmployeeIDVisible) Text="Eliminar"  Icon="report" ButtonStyle="ButtonStyle.Danger" />
                <a href="/Empleados/Ventas/ventasClientes"><RadzenButton Click=@(() => EmployeeIDVisible = !EmployeeIDVisible) Text="Volver" Icon="history" ButtonStyle="ButtonStyle.Secondary" /></a>
            </RadzenStack>
            
    </div>
    </div>

    </RadzenTemplateForm>
}

@code {
    DateTime? value = DateTime.Today;
    bool EmployeeIDVisible = false;
    public class Order
    {
                public string Name { get; set; }         
    }

 
    Order order = new Order()
    {
         
    };


    void Submit(Order arg)
    {
        //
    }
    private void OnClick(string text)
    {
        NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Info, Summary = "Button Clicked", Detail = text });
    }
    

}
