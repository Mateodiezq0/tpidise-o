@page "/Empleados/Ventas/ClienteFormulario"
@inject NotificationService NotificationService 
@inherits OwningComponentBase<Usuario> 

<TituloPrincipal TextoPrincipal="Ventas" TextoSecundario="Clientes" />

<style>
    form .row {
        margin-bottom: 16px;
    }
</style>

@if (order == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <RadzenTemplateForm Data="@order" Submit="@((Order args) => { Submit(args); })">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <RadzenFieldset Text="Modificación">
                    <div class="row">
                        <div class="col-md-4 align-items-center d-flex">
                            <RadzenLabel Text="Nombre y Apellido" />
                        </div>
                        <div class="col-md-10">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 align-items-center d-flex">
                            <RadzenLabel Text="Dirección" />
                        </div>
                        <div class="col-md-10">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 align-items-center d-flex">
                            <RadzenLabel Text="Fecha de Nacimiento" />
                        </div>
                        <div class="col-md-3">
                            <RadzenDatePicker style="width: 100%;" Name="ExpiryDate" @bind-Value="order.ExpiryDate" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 align-items-center d-flex">
                            <RadzenLabel Text="Teléfono" />
                        </div>
                        <div class="col-md-10">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 align-items-center d-flex">
                            <RadzenLabel Text="Correo Electronico" />
                        </div>
                        <div class="col-md-10">
                            <RadzenTextBox style="width: 100%;" Name="CardNr" />
                        </div>
                    </div>
                </RadzenFieldset>


        <br>
        </div>
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
                <RadzenButton Style="margin-left:70px" Click=@(args => OnClick("Primary button with text and icon")) Text="Modificar" Icon="check_circle" ButtonStyle="ButtonStyle.Success"  />
                <RadzenButton Click=@(args => OnClick("Light button with text and icon")) Text="Eliminar"  Icon="report" ButtonStyle="ButtonStyle.Danger" />
                <RadzenButton Click=@(args => OnClick("Secondary button with text and icon")) Text="Volver" Icon="history" ButtonStyle="ButtonStyle.Secondary" />
            </RadzenStack>
            
    </div>
    </div>

    </RadzenTemplateForm>
}

@code {
    public class Order
    {
        public int CardId { get; set; }
        public string CardNr { get; set; }
        public DateTime ExpiryDate { get; set; }
        public string CardHolder { get; set; }
        public string Name { get; set; }
        public string Address1 { get; set; }
        public string Address2 { get; set; }
        public string City { get; set; }
        public string State { get; set; }
        public string Zip { get; set; }
        public int Country { get; set; }
        public int StoreId { get; set; }
        public string Warehouse { get; set; }
        public string Region { get; set; }
        public string System { get; set; }
        public int TransId { get; set; }
        public string Register { get; set; }
        public string Clerk { get; set; }
        public decimal Amount { get; set; }
        public decimal Tax { get; set; }
        public DateTime OrderDate { get; set; }
        public DateTime ShipDate { get; set; }
    }

 
    Order order = new Order()
    {
        ExpiryDate = DateTime.Parse("10/10/2022"),
        OrderDate = DateTime.Now,
        ShipDate = DateTime.Now
    };


    void Submit(Order arg)
    {
        //
    }
    private void OnClick(string text)
    {
        NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Info, Summary = "Button Clicked", Detail = text });
    }
    

}
